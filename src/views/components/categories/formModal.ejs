<div class="content">
  <div class="container-fluid">
    <h4 class="page-title">
        Tạo loại sản phẩm mới
      
    </h4>
    <div class="card">
      <div class="card-body">
          <form action="/categories/create" method="post">

          <div class="form-group <%=err?.code && 'has-error has-feedback'%>">
            <label for="code">Mã loại sản phẩm</label>
            <input
              name="code"
              type="text"
              value="<%=category?.code%>"
              class="form-control categoryInput"
              id="code"
              placeholder="Nhập mã sản phẩm"
            />
            <small class="form-text text-muted text-danger"><%=err?.code%></small>
          </div>
          <div class="form-group <%=err.name && 'has-error has-feedback'%>">
            <label for="name">Tên loại sản phẩm</label>
            <input
              name="name"
              type="text"
              value="<%=category?.name%>"
              class="form-control categoryInput"
              id="name"
              placeholder="Nhập tên sản phẩm"
            />
            <small class="form-text text-muted text-danger"><%=err?.name%></small>
          </div>
          <div class="form-group <%=err.searchString && 'has-error has-feedback'%>">
            <label for="searchString">Chuỗi tìm kiếm</label>
            <input
              name="searchString"
              type="text"
              value="<%=category?.searchString%>"
              class="form-control categoryInput"
              id="searchString"
              placeholder="Nhập tên chuỗi tìm kiếm"
            />
            <small class="form-text text-muted text-danger"><%=err?.searchString%></small>
          </div>
          <div class="form-group <%=err.image && 'has-error has-feedback'%>">
            <label for="image">Link hình ảnh</label>
            <input
              name="image"
              type="text"
              value="<%=category?.image%>"
              class="form-control categoryInput"
              id="image"
              placeholder="Nhập link hình ảnh"
            />
            <small class="form-text text-muted text-danger"><%=err?.image%></small>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
