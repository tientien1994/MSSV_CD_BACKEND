<div class="content">
  <div class="container-fluid">
    <h4 class="page-title">Danh sách loại sản phẩm</h4>
    <div class="card">
      <div class="card-body">
        <table class="table table-head-bg-success">
          <thead>
            <tr>
              <th scope="col">STT</th>
              <th scope="col">Image</th>
              <th scope="col">Code</th>
              <th scope="col">Name</th>
            </tr>
          </thead>
          <tbody>
            <% categories.forEach(function(category, index){ %>
            <tr>
              <td><%=index%></td>
              <td>
                <img src="<%=category.image%>" alt="image" class="category-label"/>
              </td>
              <td><%=category.code%></td>
              <td><%=category.name%></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
