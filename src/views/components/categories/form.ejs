<div class="content">
  <div class="container-fluid">
    <h4 class="page-title">
      <% if (mode === "Create") { %>
        Tạo loại sản phẩm mới
      <% } %>
      <% if (mode === "Update") { %>
        Cập nhật loại sản phẩm
      <% } %>
      
    </h4>
    <div class="card">
      <div class="card-body">
        <% if (mode === "Create") { %>
          <form action="/categories/create" method="post">
        <% } %>
        <% if (mode === "Update") { %>
          <form action="/categories/update" method="post">
            <div class="form-group hide">
              <input
                name="id"
                type="text"
                value="<%=category?._id%>"
                id="id"
              />
            </div>
        <% } %>
          <div class="form-group">
            <label for="code">Mã loại sản phẩm</label>
            <input
              name="code"
              type="text"
              value="<%=category?.code%>"
              class="form-control"
              id="code"
              placeholder="Nhập mã sản phẩm"
            />
          </div>
          <div class="form-group">
            <label for="name">Tên loại sản phẩm</label>
            <input
              name="name"
              type="text"
              value="<%=category?.name%>"
              class="form-control"
              id="name"
              placeholder="Nhập tên sản phẩm"
            />
          </div>
          <div class="form-group">
            <label for="image">Link hình ảnh</label>
            <input
              name="image"
              type="text"
              value="<%=category?.image%>"
              class="form-control"
              id="image"
              placeholder="Nhập link hình ảnh"
            />
          </div>
          <div class="card-action">
            <% if (mode === "Create") { %>
              <button class="btn btn-success" type="submit">Tạo</button>
            <% } %>
            <% if (mode === "Update") { %>
              <button class="btn btn-success" type="submit">Cập nhật</button>
            <% } %>

            <a class="btn btn-primary" href="/categories">
              Trở về trang danh sách sản phẩm
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
